      "1/2 кг пилешко месо",
      "1 глава лук",
      "1 морков",
      "2 домата",
      "1 червена чушка",
      "3 картофа",
      "50 мл. олио",
      "1 яйце",
      "1 люта чушка",
      " магданоз",
      " джоджен",
      " оцет",
